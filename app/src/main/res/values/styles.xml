<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="actionbar_def_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 在样式里面直接替换掉actionbar的背景，避免在有的窗口进入慢时导致进入时显示系统默认的actionbar -->
        <item name="android:background">@drawable/actionbar_bottom_bg</item>
        <!-- 在样式里面去掉acionbar的应用图标和标题 -->
        <item name="android:displayOptions">useLogo</item>
        <item name="android:fitsSystemWindows">true</item>




    </style>
        <!-- Activity主题 -->
        <style name="activityTheme" parent="@style/AppTheme">
            <item name="android:windowIsTranslucent">true</item>
            <item name="android:windowNoTitle">true</item>
        </style>
    <!--You need to use a Theme.AppCompat theme (or descendant) with this activity.-->
    <style name="ContentOverlay" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="WindowTransparent" parent="AppTheme">
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
